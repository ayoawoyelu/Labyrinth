<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayoawoyelu.labyrinth.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Labyrinth Game!"
        android:id="@+id/textView" />

    <Button
        android:text="Start Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start"
        android:layout_marginTop="73dp"
        android:elevation="9dp"
        android:color ="#1e3f9b"
        android:width="225dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/Instruction"
        android:layout_alignStart="@+id/Instruction" />

    <Button
        android:text="Instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Instruction"
        android:width="225dp"
        android:layout_below="@+id/selectLevel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:text="SELECT LEVEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectLevel"
        android:layout_below="@+id/Start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:width="225dp" />
</RelativeLayout>